<p id="notice"><%= notice %></p>

<h1>Raiders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class</th>
      <th>Role</th>
      <th>Battletag</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raiders.each do |raider| %>
      <tr>
        <td><%= raider.name %></td>
        <td><%= raider.class %></td>
        <td><%= raider.role %></td>
        <td><%= raider.battletag %></td>
        <td><%= raider.rank %></td>
        <td><%= link_to 'Show', raider %></td>
        <td><%= link_to 'Edit', edit_raider_path(raider) %></td>
        <td><%= link_to 'Destroy', raider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

